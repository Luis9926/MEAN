<% include _Header %>
    <h1>
        <%= title %>
    </h1>
    <p>Welcome to
        <%= title %>
    </p>
    <h2>Lista de Zombies</h2>

    <table class="table table-striped">
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>

        <% if(coleccion)
  {
    coleccion.forEach(function(zombie){
  %>

            <tr>
                <td>
                    <%=zombie.name %>
                </td>
                <td>
                    <%=zombie.email %>
                </td>
                <td>
                    <%=zombie.type %>
                </td>
                <td>
                    <a href="/zombies/edit/<%= zombie.id %>"><i class="fas fa-sync" title="Editar"></i></a>
                    <a href="/zombies/delete/<%= zombie.id %>"><i class="fas fa-trash" title="Borrar"></i></a>

                </td>
            </tr>
            <%
    });
  }%>
    </table>
    <% include _footer %>