<% include _Header %>

    <h1 align="center">Editar Zombie</h1>
    <% if(text!=false){%>

        <% if(text.name)
    {      
    %>

            <div class="alert alert-<%=clas %>">
                <%=text.name.message %>
            </div>
            <%
    }
    %>
                <% if(text.email)
    {      
    %>

                    <div class="alert alert-<%=clas %>">
                        <%=text.email.message %>
                    </div>
                    <%
    }
    %>
                        <% if(text.type)
    {      
    %>
                            <div class="alert alert-<%=clas %>">
                                <%=text.type.message %>
                            </div>
                            <%
    }
    %>
                                <%}%>
                                    <%if(mensaje.length>0){%>
                                        <div class="alert alert-<%=clas %>">
                                            <%=mensaje %>
                                        </div>
                                        <%}%>
                                            <div class="row container">
                                                <div class="col-md-12">
                                                    <form action="/zombie/edit/<%= zombie.id%>?_method=PUT" method="POST">
                                                        <div class="form-group">
                                                            <label for="">Nombre</label>
                                                            <input type="text" class="form-control" name="name" value="<%= zombie.name%>">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">email</label>
                                                            <input type="text" class="form-control" name="email" value="<%= zombie.email %>">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">type</label>
                                                            <input type="text" class="form-control" name="type" value="<%= zombie.type %>">
                                                        </div>
                                                        <button class="btn btn-primary">Editar Zombie</button>
                                                    </form>
                                                </div>
                                            </div>

                                            <% include _footer %>