<% include _Header %>
    <h1>Editar Cerebro</h1>
    <% if(text!=false){%>

        <% if(text.flavor)
    {      
    %>

            <div class="alert alert-<%=clas %>">
                <%=text.flavor.message %>
            </div>
            <%
    }
    %>
                <% if(text.description)
    {      
    %>

                    <div class="alert alert-<%=clas %>">
                        <%=text.description.message %>
                    </div>
                    <%
    }
    %>
                        <% if(text.iq)
    {      
    %>

                            <div class="alert alert-<%=clas %>">
                                <%=text.iq.message %>
                            </div>
                            <%
    }
    %>
                                <% if(text.picture)
    {      
    %>

                                    <div class="alert alert-<%=clas %>">
                                        <%=text.picture.message %>
                                    </div>
                                    <%
    }
    %>
                                        <%}%>
                                            <%if(mensaje.length>0){%>
                                                <div class="alert alert-<%=clas %>">
                                                    <%=mensaje %>
                                                </div>
                                                <%}%>
                                                    <div class="row container">
                                                        <div class="col-md-12">
                                                            <form action="/cerebro/edit/<%= cerebro.id %>?_method=PUT" method="POST">
                                                                <div class="form-group">
                                                                    <label for="">Flavor</label>
                                                                    <input type="text" class="form-control" name="flavor" value="<%=cerebro.flavor%>">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="">Description</label>
                                                                    <input type="text" class="form-control" name="description" value="<%=cerebro.description%>">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="">IQ</label>
                                                                    <input type="number" class="form-control" name="iq" value="<%=cerebro.iq%>">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="">Picture URL</label>
                                                                    <input type="text" class="form-control" name="picture" value="<%=cerebro.picture%>">
                                                                </div>
                                                                <button class="btn btn-primary">Editar Cerebro</button>
                                                            </form>
                                                        </div>
                                                    </div>

                                                    <% include _footer %>