<% include _Header %>

    <h1 align="center">Eliminar Este Cerebro</h1>

    <div class="row container">
        <div class="col-md-12">
            <form action="/cerebro/delete/<%= cerebro.id%>?_method=DELETE" method="POST">
                <div class="form-group">
                    <label for="">Flavor</label>
                    <input type="text" class="form-control" name="flavor" value="<%= cerebro.flavor%>" disabled>
                </div>
                <div class="form-group">
                    <label for="">description</label>
                    <input type="text" class="form-control" name="description" value="<%= cerebro.description %>" disabled>
                </div>
                <div class="form-group">
                    <label for="">IQ</label>
                    <input type="number" class="form-control" name="iq" value="<%= cerebro.iq %>" disabled>
                </div>
                <div class="form-group">
                    <label for="">Picture</label>
                    <input type="text" class="form-control" name="picture" value="<%= cerebro.picture %>" disabled>
                </div>
                <button class="btn btn-primary">Eliminar Cerebro</button>
            </form>
        </div>
    </div>

    <% include _footer %>