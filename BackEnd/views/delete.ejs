<% include _Header %>

    <h1 align="center">Eliminar Este Zombie</h1>

    <div class="row container">
        <div class="col-md-12">
            <form action="/zombie/delete/<%= zombie.id%>?_method=DELETE" method="POST">
                <div class="form-group">
                    <label for="">Nombre</label>
                    <input type="text" class="form-control" name="name" value="<%= zombie.name%>" disabled>
                </div>
                <div class="form-group">
                    <label for="">email</label>
                    <input type="text" class="form-control" name="email" value="<%= zombie.email %>" disabled>
                </div>
                <div class="form-group">
                    <label for="">type</label>
                    <input type="text" class="form-control" name="type" value="<%= zombie.type %>" disabled>
                </div>
                <button class="btn btn-primary">Eliminar Zombie</button>
            </form>
        </div>
    </div>

    <% include _footer %>